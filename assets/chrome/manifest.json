{
    "manifest_version"  : 2,
    "name"              : "Tab Roulette",
    "version"           : "0.6",
    "description"       : "Tab slideshow plugin - Awesome for in-office dashboards!",

    "options_page"      : "assets/html/mission-control.html",



    "browser_action" : {
        "default_icon" : "assets/images/icon_19x19_grey.png",
        "default_title" : "Tab roulette"
    },

    "background": {
        "scripts": [
            "javascript/dependencies/underscore-1.4.3.js",
            "javascript/compiled/lib.js",
            "javascript/compiled/background.js"
        ]
    },

    "permissions" : [
        "tabs",
        "storage",
        "background",
        "<all_urls>"
    ],

    "icons": {
        "16": "assets/images/icon_16x16.png",
        "48": "assets/images/icon_48x48.png",
        "128": "assets/images/icon_128x128.png"
    },

    "content_scripts" : [
        {
            "matches": [ "<all_urls>" ],
            "css": [ "assets/css/content-script.css" ],
            "js": [ "javascript/dependencies/jquery-1.8.3.js", "javascript/dependencies/content-script.js" ]
        }
    ]

}
